<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:patient="ps.app.ui.lib">
    <patient:Chart color="{color}" title="{title}" mode="{mode}" formatter="\{${valueColumn}\}" dateColumn="_startDate" valueColumn="{valueColumn}" keyColumn="_id" noDataText="{i18n>HPH_PAT_CONTENT_NO_VALUE}"
        subLanes="{path: 'subLanes', factory: '.createLane'}" datapointClick=".handleDatapointClick" titleTooltip="{title}" valueTooltip="{parts: ['i18n>HPH_PAT_CONTENT_CHART_VALUE_TOOLTIP', 'title'], formatter: '.formatText'}">
        <patient:headerContent>
            <FlexBox height="100%" justifyContent="SpaceBetween" alignItems="{= ${minimized} ? 'Center' : 'End' }" direction="{= ${minimized} ? 'Row' : 'Column' }">
                <Button icon="sap-icon://sys-minus" type="Transparent" press="onRemoveLane" tooltip="{i18n>HPH_PAT_CONTENT_REMOVE_CHART_TOOLTIP}" />
                <Button icon="sap-icon://business-objects-experience" type="Transparent" press="onOpenChartVisualizationDialog" tooltip="{i18n>HPH_PAT_CONTENT_CHOOSE_VISUALIZATION_TOOLTIP}" />
            </FlexBox>
        </patient:headerContent>
    </patient:Chart>
</core:FragmentDefinition>
