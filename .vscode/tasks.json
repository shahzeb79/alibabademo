{
    "version": "0.1.0",
    "command": "npm",
    "isShellCommand": true,
    "showOutput": "always",
    "suppressTaskName": true,
    "tasks": [
        {
            "taskName": "NPM install",
            "args": ["install"]
        },
        {
            "taskName": "NPM update",
            "args": ["update"]
        },
        {
            "taskName": "Run all tests",
            "args": ["test"]
        },
        {
            "taskName": "Run unit tests",
            "args": ["run", "unit_test"]
        },
        {
            "taskName": "Run integration tests",
            "args": ["run", "integration_test"]
        },
        {
            "taskName": "Start mocked application",
            "args": ["run", "dev"]
        },
        {
            "taskName": "Start application",
            "args": ["run", "start"]
        },
        {
            "taskName": "Download SAP UI5",
            "args": ["run", "getUI5"]
        },
        {
            "taskName": "Lint",
            "args": ["run", "lint"]
        },
        {
            "taskName": "Generate Stylesheets",
            "args": ["run", "styles"]
        }
    ]
}